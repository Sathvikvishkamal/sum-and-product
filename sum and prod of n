
#include <stdio.h>

int main()
{
    int n,i,sum=0,X,prod;
    printf("enter n:\n");
    scanf("%d",&n);
    printf("enter X=0 for sum and X=1 for product\n");
    scanf("%d",&X);
    if(X==0)
    {
    for(i=0;i<=n;i++)
    {
        if(i%3==0 || i%5==0)
        {
        sum=sum+i;
        
        }   
    }
       printf("the total sum is %d ",sum);
    }
    else if(X==1)
    {
    for(i=1;i<=n;i++)
    {
        if(i%3==0 || i%5==0)
        {
        prod=prod*i;
      
        }   
    }
       printf("the total product is %d ",prod);
    }
    
    return 0;
    
}
